@* ============================================
   Joonguini - Programming in the Kitchen
   قائمة الفئات
   ============================================ *@

@model IEnumerable<Category>

@{
    ViewData["Title"] = "إدارة الفئات";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4>الفئات</h4>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> إضافة فئة جديدة
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>الصورة</th>
                        <th>الاسم</th>
                        <th>الوصف</th>
                        <th>عدد المنتجات</th>
                        <th>الحالة</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(category.ImageUrl))
                                    {
                                        <img src="@category.ImageUrl" alt="@category.Name" style="width: 50px; height: 50px; object-fit: cover;" class="rounded">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded" style="width: 50px; height: 50px;">
                                            <i class="bi bi-tags"></i>
                                        </div>
                                    }
                                </td>
                                <td><strong>@category.Name</strong></td>
                                <td>@(category.Description?.Length > 50 ? category.Description.Substring(0, 50) + "..." : category.Description)</td>
                                <td>
                                    <span class="badge bg-info">@category.Products?.Count() منتج</span>
                                </td>
                                <td>
                                    @if (category.IsActive)
                                    {
                                        <span class="badge bg-success">نشطة</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">غير نشطة</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-outline-info" title="التفاصيل">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-primary" title="تعديل">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-outline-danger" title="حذف">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="bi bi-inbox display-4 d-block mb-2"></i>
                                لا توجد فئات بعد
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
