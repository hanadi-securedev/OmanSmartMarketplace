@* ============================================
   Joonguini - Programming in the Kitchen
   تفاصيل الفئة
   ============================================ *@

@model Category

@{
    ViewData["Title"] = "تفاصيل الفئة";
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-tags"></i> تفاصيل الفئة: @Model.Name</h5>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                        <i class="bi bi-pencil"></i> تعديل
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-4 text-center">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" />
                        }
                        else
                        {
                            <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 150px;">
                                <i class="bi bi-tags display-1 text-muted"></i>
                            </div>
                        }
                    </div>
                    <div class="col-md-8">
                        <h3>@Model.Name</h3>
                        <p class="text-muted">@Model.Description</p>
                        <p>
                            <strong>الحالة:</strong>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">نشطة</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">غير نشطة</span>
                            }
                        </p>
                    </div>
                </div>

                <hr />

                <h5><i class="bi bi-box"></i> المنتجات في هذه الفئة (@Model.Products?.Count())</h5>

                @if (Model.Products != null && Model.Products.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>الاسم</th>
                                    <th>السعر</th>
                                    <th>المخزون</th>
                                    <th>الحالة</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Products)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                                                @product.Name
                                            </a>
                                        </td>
                                        <td>@product.Price.ToString("N2") ر.ع</td>
                                        <td>@product.StockQuantity</td>
                                        <td>
                                            @if (product.IsActive)
                                            {
                                                <span class="badge bg-success">نشط</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">غير نشط</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">لا توجد منتجات في هذه الفئة</p>
                }
            </div>
            <div class="card-footer">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-right"></i> العودة للقائمة
                </a>
            </div>
        </div>
    </div>
</div>
