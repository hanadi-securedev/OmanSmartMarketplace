@* ============================================
   Joonguini - Programming in the Kitchen
   لوحة التحكم الرئيسية
   ============================================ *@

@{
    ViewData["Title"] = "لوحة التحكم";
}

<div class="row g-4 mb-4">
    <!-- Products Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card card-stat shadow-sm bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">المنتجات</h6>
                        <h2 class="card-title mb-0">@ViewBag.ProductsCount</h2>
                    </div>
                    <i class="bi bi-box display-4 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a asp-controller="Products" asp-action="Index" class="text-white text-decoration-none small">
                    عرض الكل <i class="bi bi-arrow-left"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Categories Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card card-stat shadow-sm bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">الفئات</h6>
                        <h2 class="card-title mb-0">@ViewBag.CategoriesCount</h2>
                    </div>
                    <i class="bi bi-tags display-4 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a asp-controller="Categories" asp-action="Index" class="text-white text-decoration-none small">
                    عرض الكل <i class="bi bi-arrow-left"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Orders Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card card-stat shadow-sm bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">الطلبات</h6>
                        <h2 class="card-title mb-0">@ViewBag.OrdersCount</h2>
                    </div>
                    <i class="bi bi-cart display-4 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a asp-controller="Orders" asp-action="Index" class="text-white text-decoration-none small">
                    عرض الكل <i class="bi bi-arrow-left"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Pending Orders Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card card-stat shadow-sm bg-warning text-dark">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 opacity-75">طلبات معلقة</h6>
                        <h2 class="card-title mb-0">@ViewBag.PendingOrdersCount</h2>
                    </div>
                    <i class="bi bi-clock display-4 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0">
                <a asp-controller="Orders" asp-action="Pending" class="text-dark text-decoration-none small">
                    عرض الكل <i class="bi bi-arrow-left"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-lightning"></i> إجراءات سريعة</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <a asp-controller="Products" asp-action="Create" class="btn btn-outline-primary w-100 py-3">
                            <i class="bi bi-plus-circle d-block mb-2 fs-4"></i>
                            إضافة منتج جديد
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Categories" asp-action="Create" class="btn btn-outline-success w-100 py-3">
                            <i class="bi bi-plus-circle d-block mb-2 fs-4"></i>
                            إضافة فئة جديدة
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Orders" asp-action="Pending" class="btn btn-outline-warning w-100 py-3">
                            <i class="bi bi-hourglass-split d-block mb-2 fs-4"></i>
                            الطلبات المعلقة
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Orders" asp-action="Index" class="btn btn-outline-info w-100 py-3">
                            <i class="bi bi-list-ul d-block mb-2 fs-4"></i>
                            جميع الطلبات
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
