@* ============================================
   Joonguini - Programming in the Kitchen
   تفاصيل المنتج
   ============================================ *@

@model Product

@{
    ViewData["Title"] = "تفاصيل المنتج";
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-box"></i> تفاصيل المنتج</h5>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                        <i class="bi bi-pencil"></i> تعديل
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> حذف
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center mb-3">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" style="max-height: 250px;" />
                        }
                        else
                        {
                            <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image display-1 text-muted"></i>
                            </div>
                        }
                    </div>
                    <div class="col-md-8">
                        <h3>@Model.Name</h3>
                        <p class="text-muted">@Model.Description</p>

                        <div class="row mt-4">
                            <div class="col-6 mb-3">
                                <strong>السعر:</strong>
                                <span class="text-success fs-4">@Model.Price.ToString("N2") ر.ع</span>
                            </div>
                            <div class="col-6 mb-3">
                                <strong>الفئة:</strong>
                                <span class="badge bg-info">@Model.Category?.Name</span>
                            </div>
                            <div class="col-6 mb-3">
                                <strong>المخزون:</strong>
                                <span class="badge @(Model.StockQuantity > 10 ? "bg-success" : Model.StockQuantity > 0 ? "bg-warning" : "bg-danger")">
                                    @Model.StockQuantity
                                </span>
                            </div>
                            <div class="col-6 mb-3">
                                <strong>الحالة:</strong>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">نشط</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">غير نشط</span>
                                }
                            </div>
                            <div class="col-12">
                                <strong>تاريخ الإنشاء:</strong>
                                <span>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-right"></i> العودة للقائمة
                </a>
            </div>
        </div>
    </div>
</div>
