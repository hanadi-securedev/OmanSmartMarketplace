   ============================================ *@

@model Product

@{
    ViewData["Title"] = "حذف المنتج";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> تأكيد الحذف</h5>
            </div>
            <div class="card-body text-center">
                <i class="bi bi-trash display-1 text-danger mb-3"></i>
                <h4>هل أنت متأكد من حذف هذا المنتج؟</h4>
                <p class="text-muted">@Model.Name</p>
                <p class="text-danger">
                    <small>هذا الإجراء لا يمكن التراجع عنه!</small>
                </p>
            </div>
            <div class="card-footer d-flex justify-content-center gap-2">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> نعم، احذف
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> إلغاء
                </a>
            </div>
        </div>
    </div>
</div>
